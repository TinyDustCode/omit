{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "outDir": "./dist/es",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2017",
    "jsx": "react-jsx"
  },
  "include": ["components/**/*", "context/**/*", "types/**/*", "utils/**/*", "index.ts"],
  "exclude": ["node_modules", "**/dist/**/*"]
}
