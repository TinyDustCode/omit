{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "outDir": "./dist/es",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2017"
  },
  "include": ["src/**/*", "types/**/*", "index.ts"],
  "exclude": ["node_modules", "**/dist/**/*"],
  "typeRoots": ["./types/"]
}
